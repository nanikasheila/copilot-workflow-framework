{
  // Copilot Chat 関連設定
  "chat.agent.thinking.collapsedTools": false,
  "chat.promptFilesLocations": [
    { "path": ".github/prompts" }
  ],

  // Prompt File をセッション開始時に推奨表示する
  "chat.promptFilesRecommendations": [
    "start",
    "plan",
    "review"
  ],

  // ファイル保護: .github/ 配下の重要ファイルの編集前に確認を求める
  "chat.editSensitiveFiles.patterns": [
    ".github/rules/**",
    ".github/hooks/**",
    ".github/settings.json",
    ".github/copilot-instructions.md",
    ".copilot/boards/**"
  ]
}
