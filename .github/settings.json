{
  "$schema": "./settings.schema.json",
  "github": {
    "owner": "nanikasheila",
    "repo": "copilot-project-template",
    "mergeMethod": "merge"
  },
  "issueTracker": {
    "provider": "none"
  },
  "branch": {
    "user": "nanikasheila",
    "format": "<user>/<type>-<description>"
  },
  "project": {
    "name": "copilot-project-template",
    "language": "python",
    "entryPoint": "src/",
    "test": {
      "command": "python -m pytest tests/ -v --tb=short",
      "directory": "tests",
      "pattern": "test_*.py"
    }
  },
  "agents": {
    "model": "Claude Sonnet 4.6 (copilot)"
  }
}
