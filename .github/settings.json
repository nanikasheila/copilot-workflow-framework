{
  "$schema": "./settings.schema.json",
  "github": {
    "owner": "nanikasheila",
    "repo": "copilot-project-template",
    "mergeMethod": "merge"
  },
  "issueTracker": {
    "provider": "none"
  },
  "branch": {
    "user": "nanikasheila",
    "format": "<user>/<type>-<description>"
  },
  "project": {
    "name": "copilot-project-template",
    "language": "markdown",
    "test": {
      "command": "python tools/skill-creator/scripts/quick_validate.py",
      "directory": "tools/skill-creator/scripts/",
      "pattern": "*.py"
    }
  },
  "agents": {
    "model": "Claude Sonnet 4.6 (copilot)"
  }
}
