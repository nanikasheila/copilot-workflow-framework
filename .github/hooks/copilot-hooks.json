{
  "hooks": {
    "SessionStart": [
      {
        "type": "command",
        "command": "python tools/hooks/session_start.py",
        "windows": "python tools\\hooks\\session_start.py",
        "timeout": 15
      }
    ],
    "SubagentStart": [
      {
        "type": "command",
        "command": "python tools/hooks/subagent_start.py",
        "windows": "python tools\\hooks\\subagent_start.py",
        "timeout": 15
      }
    ],
    "PreToolUse": [
      {
        "type": "command",
        "command": "python tools/hooks/pre_tool_use.py",
        "windows": "python tools\\hooks\\pre_tool_use.py",
        "timeout": 10
      }
    ],
    "PostToolUse": [
      {
        "type": "command",
        "command": "python tools/hooks/post_tool_use.py",
        "windows": "python tools\\hooks\\post_tool_use.py",
        "timeout": 30
      }
    ],
    "PreCompact": [
      {
        "type": "command",
        "command": "python tools/hooks/pre_compact.py",
        "windows": "python tools\\hooks\\pre_compact.py",
        "timeout": 15
      }
    ],
    "Stop": [
      {
        "type": "command",
        "command": "python tools/hooks/stop_check.py",
        "windows": "python tools\\hooks\\stop_check.py",
        "timeout": 15
      }
    ]
  }
}
